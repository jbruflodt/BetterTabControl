<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BetterTabControlTest"
             xmlns:BetterTabs="clr-namespace:BetterTabs;assembly=BetterTabControl" x:Name="userControl" x:Class="BetterTabControlTest.TestDataGrid"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BetterTabs:ListCollectionViewIListConverter x:Key="ListCollectionViewIListConverter"/>
    </UserControl.Resources>
    <Grid DataContext="{Binding Source={StaticResource SampleDataSource}}">

        <BetterTabs:AutoFilterDataGrid x:Name="dataGrid" DataSource="{Binding Collection, Converter={StaticResource ListCollectionViewIListConverter}}" DataContext="{Binding TestData, ElementName=userControl}"/>

    </Grid>
</UserControl>
